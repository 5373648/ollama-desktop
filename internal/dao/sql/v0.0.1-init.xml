<?xml version="1.0"?>
<vulcan xmlns="http://www.jianggujin.com/xml/vulcan"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.jianggujin.com/xml/vulcan
                   ../../vulcan/vulcan.xsd">
    <createTable tableName="t_config" remarks="配置信息表">
        <column columnName="id" dataType="VARCHAR" maxLength="64" primaryKey="true" remarks="主键"/>
        <column columnName="config_key" dataType="VARCHAR" maxLength="100" nullable="false" remarks="配置键"/>
        <column columnName="config_value" dataType="TEXT" remarks="配置值"/>
        <column columnName="config_group" dataType="VARCHAR" maxLength="100" nullable="false" remarks="配置组"/>
        <column columnName="config_comment" dataType="VARCHAR" maxLength="500" remarks="配置说明"/>
        <column columnName="created_at" dataType="TIMESTAMP" remarks="创建时间"/>
        <column columnName="updated_at" dataType="TIMESTAMP" remarks="修改时间"/>
    </createTable>
    <createIndex tableName="t_config" indexName="ux_config">
        <indexColumn columnName="config_group"/>
        <indexColumn columnName="config_key"/>
    </createIndex>
    <createTable tableName="t_session" remarks="会话信息表">
        <column columnName="id" dataType="VARCHAR" maxLength="64" primaryKey="true" remarks="主键"/>
        <column columnName="session_name" dataType="VARCHAR" maxLength="50" nullable="false" remarks="会话名称"/>
        <column columnName="model_name" dataType="VARCHAR" maxLength="100" nullable="false" remarks="模型名称"/>
        <column columnName="prompts" dataType="VARCHAR" maxLength="100" remarks="提示词"/>
        <column columnName="message_history_count" dataType="INT" defaultOriginValue="3" nullable="false"
                remarks="会话历史轮次"/>
        <column columnName="use_stream" dataType="BOOLEAN" defaultOriginValue="1" remarks="是否使用流式返回"/>
        <column columnName="response_format" dataType="VARCHAR" maxLength="100" defaultValue="json"
                remarks="响应数据格式"/>
        <column columnName="keep_alive" dataType="BIGINT" remarks="模型在内存中存活时间"/>
        <column columnName="options" dataType="TEXT" remarks="扩展选项"/>
        <column columnName="session_type" dataType="VARCHAR" maxLength="50" defaultValue="chat" nullable="false"
                remarks="会话类型"/>
        <column columnName="created_at" dataType="TIMESTAMP" nullable="false" remarks="创建时间"/>
        <column columnName="updated_at" dataType="TIMESTAMP" nullable="false" remarks="修改时间"/>
    </createTable>
    <createTable tableName="t_question" remarks="消息信息表">
        <column columnName="id" dataType="VARCHAR" maxLength="64" primaryKey="true" remarks="主键"/>
        <column columnName="session_id" dataType="VARCHAR" maxLength="64" nullable="false" remarks="会话编号"/>
        <column columnName="question_content" dataType="TEXT" remarks="问题内容"/>
        <column columnName="answer_count" dataType="INT" defaultOriginValue="0" nullable="false" remarks="回答次数"/>
        <column columnName="message_type" dataType="VARCHAR" maxLength="50" defaultValue="chat" nullable="false"
                remarks="消息类型"/>
        <column columnName="has_image" dataType="TINYINT" defaultOriginValue="0" nullable="false" remarks="是否存在图片"/>
        <column columnName="created_at" dataType="TIMESTAMP" nullable="false" remarks="创建时间"/>
        <column columnName="updated_at" dataType="TIMESTAMP" nullable="false" remarks="修改时间"/>
    </createTable>
    <createIndex tableName="t_question" indexName="ix_session_id_type">
        <indexColumn columnName="session_id"/>
        <indexColumn columnName="message_type"/>
    </createIndex>
    <createTable tableName="t_answer" remarks="回答信息表">
        <column columnName="id" dataType="VARCHAR" maxLength="64" primaryKey="true" remarks="主键"/>
        <column columnName="session_id" dataType="VARCHAR" maxLength="64" nullable="false" remarks="会话编号"/>
        <column columnName="question_id" dataType="VARCHAR" maxLength="64" nullable="false" remarks="问题编号"/>
        <column columnName="answer_content" dataType="TEXT" remarks="回答内容"/>
        <column columnName="message_role" dataType="VARCHAR" maxLength="100" defaultValue="assistant" remarks="角色"/>
        <column columnName="total_duration" dataType="BIGINT" defaultOriginValue="0" remarks="总持续时间"/>
        <column columnName="load_duration" dataType="BIGINT" defaultOriginValue="0" remarks="加载持续时间"/>
        <column columnName="prompt_eval_count" dataType="INT" defaultOriginValue="0" remarks="提示评估计数"/>
        <column columnName="prompt_eval_duration" dataType="BIGINT" defaultOriginValue="0" remarks="提示评估持续时间"/>
        <column columnName="eval_count" dataType="INT" defaultOriginValue="0" remarks="评估计数"/>
        <column columnName="eval_duration" dataType="BIGINT" defaultOriginValue="0" remarks="评估持续时间"/>
        <column columnName="done_reason" dataType="TEXT" remarks="完成原因"/>
        <column columnName="is_last" dataType="TINYINT" defaultOriginValue="1" nullable="false" remarks="是否最后一条"/>
        <column columnName="is_success" dataType="TINYINT" defaultOriginValue="0" nullable="false" remarks="是否成功"/>
        <column columnName="has_image" dataType="TINYINT" defaultOriginValue="0" nullable="false" remarks="是否存在图片"/>
        <column columnName="created_at" dataType="TIMESTAMP" nullable="false" remarks="创建时间"/>
        <column columnName="updated_at" dataType="TIMESTAMP" nullable="false" remarks="修改时间"/>
    </createTable>
    <createIndex tableName="t_answer" indexName="ix_session_answer">
        <indexColumn columnName="session_id"/>
    </createIndex>
    <createIndex tableName="t_answer" indexName="ix_question_id_role">
        <indexColumn columnName="question_id"/>
        <indexColumn columnName="message_role"/>
    </createIndex>
    <createTable tableName="t_image" remarks="图片信息表">
        <column columnName="id" dataType="VARCHAR" maxLength="64" primaryKey="true" remarks="主键"/>
        <column columnName="session_id" dataType="VARCHAR" maxLength="64" nullable="false" remarks="会话编号"/>
        <column columnName="ref_id" dataType="VARCHAR" maxLength="64" nullable="false" remarks="关联编号"/>
        <column columnName="ref_type" dataType="VARCHAR" maxLength="100" remarks="关联类型"/>
        <column columnName="image_data" dataType="BLOB" remarks="图片数据"/>
        <column columnName="created_at" dataType="TIMESTAMP" nullable="false" remarks="创建时间"/>
        <column columnName="updated_at" dataType="TIMESTAMP" nullable="false" remarks="修改时间"/>
    </createTable>
    <createIndex tableName="t_image" indexName="ix_session_image">
        <indexColumn columnName="session_id"/>
    </createIndex>
    <createIndex tableName="t_image" indexName="ix_ref_id_type">
        <indexColumn columnName="ref_id"/>
        <indexColumn columnName="ref_type"/>
    </createIndex>
</vulcan>